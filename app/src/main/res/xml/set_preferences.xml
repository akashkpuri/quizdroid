<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory  android:title="Download Settings">
        <EditTextPreference
            android:title="Download URL"
            android:summary="Set download target location"
            android:key="prefURL"
            android:defaultValue="www.google.com"/>
        <EditTextPreference
            android:title="Download Interval"
            android:summary="Set interval in minutes between quiz updates"
            android:key="prefInterval"
            android:defaultValue="2"/>
    </PreferenceCategory>
</PreferenceScreen>
